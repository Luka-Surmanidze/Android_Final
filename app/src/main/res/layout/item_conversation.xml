<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_small">

    <ImageView
        android:id="@+id/image_profile"
        android:layout_width="@dimen/home_image_size"
        android:layout_height="@dimen/home_image_size"
        android:src="@drawable/avatar_image_placeholder"
        android:scaleType="centerCrop"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="?attr/selectableItemBackgroundBorderless"/>

    <TextView
        android:id="@+id/text_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Givi Modebadze"
        android:textSize="@dimen/text_size_big"

        app:layout_constraintStart_toEndOf="@id/image_profile"
        app:layout_constraintTop_toTopOf="@id/image_profile"
        app:layout_constraintEnd_toStartOf="@id/text_timestamp"
        android:layout_marginStart="@dimen/margin_big"
        />

    <TextView
        android:id="@+id/text_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 JAN"
        android:textColor="@color/text_color"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_username" />

    <TextView
        android:id="@+id/text_last_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="I hope I will finish this homework soon, please work, please work"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/text_username"
        app:layout_constraintTop_toBottomOf="@id/text_username"
        android:layout_marginTop="@dimen/margin_small"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
